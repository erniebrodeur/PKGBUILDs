post_install() {
	echo ">>> Deluge-svn is installed (r$1)"
	echo ">>> To run Deluge:"
	echo ">>>   Daemon: deluged"
	echo ">>>   GTK Client: deluge -u gtk"
	echo ">>>   Web Client: deluge -u web"
	echo ">>>   Console Client: deluge -u console"
}
post_upgrade() {
	post_install $1
}

pre_remove() {
	/bin/true
}

op=$1
shift

$op $*

