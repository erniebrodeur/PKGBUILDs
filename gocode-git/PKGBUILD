# Contributor: Dave Reisner <d@falconindy.com>

pkgname=gocode-git
pkgver=20120212
pkgrel=1
pkgdesc="An autocompletion/refactoring daemon for the Go programming language (for use in Vim)"
arch=(i686 x86_64)
url="http://github.com/nsf/gocode"
license=('GPL')
depends=('go-weekly')
provides=('gocode')
conflicts=('gocode')
makedepends=('git')
options=(!strip)

_gitroot="git://github.com/nsf/gocode.git"
_gitname="gocode"

package() {
  install -dm755 "$pkgdir/usr/bin"
  GOBIN="$pkgdir/usr/bin" go get -u github.com/nsf/gocode
}
