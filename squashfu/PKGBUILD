# Contributor: Dave Reisner (d@falconindy.com)
pkgname=squashfu-git
pkgver=20100112
pkgrel=1
pkgdesc="An incremental backup solution using Aufs"
arch=('i686l' 'x86_64')
url="http://github.com/falconindy/SquashFu"
license=('GPL')
depends=('bash' 'aufs2-ckzero' 'aufs2-util' 'squashfs-tools' 'rsync')
makedepends=('git')
provides=('squashfu')
conflicts=('squashfu')
backup=('squashfu.conf')
source=()
md5sums=()

_gitroot="git://github.com/falconindy/SquashFu.git"
_gitname="SquashFu"

build() {
  cd "$srcdir"
  msg "Connecting to github.com GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  install -D -m644 ${_gitname}/squashfu.conf ${pkgdir}/etc/squashfu.conf
  install -D -m755 ${_gitname}/squashfu ${pkgdir}/usr/bin/squashfu
} 
