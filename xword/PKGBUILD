# Contributor: Dave Reisner (d at falconindy dot com)
pkgname=xword
pkgver=1.0
pkgrel=2
pkgdesc="A Python based crossword puzzle application that reads the AcrossLite format"
arch=('i686' 'x86_64')
url="http://x-word.org/"
license=('GPL')
depends=('pygtk>=2.0' 'python2')
options=(!strip !zipman )
source=(http://x-word.org/${pkgname}-${pkgver}.tar.gz)
md5sums=('5e1963b488dfa0aca75be3bc3af04887')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}/

  install -Dm644 *.png LICENSE ${pkgdir}/usr/lib/xword/
  install -Dm755 xword ${pkgdir}/usr/lib/xword/
  ln -s /usr/lib/xword/xword "${pkgdir}/usr/bin/xword"
}

# vim:set ts=2 sw=2 et:
