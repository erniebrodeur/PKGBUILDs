# Maintainer: Dave Reisner <d@falconindy.com>

pkgname=cower
pkgver=2.5.3
pkgrel=1
pkgdesc="A simple AUR agent with a pretentious name"
arch=('i686' 'x86_64')
url="http://github.com/falconindy/cower"
license=('GPL')
depends=('curl' 'yajl' 'pacman')
makedepends=('perl')
source=("http://github.com/downloads/falconindy/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('ababbd57d0a55be046e8521ce225e95c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make PREFIX=/usr DESTDIR=${pkgdir} install
}

# vim: ft=sh syn=sh
