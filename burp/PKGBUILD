# Contributor: Dave Reisner <d@falconindy.com>

pkgname=burp
pkgver=1.4
pkgrel=1
pkgdesc="A simple AUR uploader"
arch=('i686' 'x86_64')
url="http://github.com/falconindy/burp"
license=('GPL')
makedepends=('curl')
source=("http://github.com/downloads/falconindy/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('337dc84b9e72d208c22e7ab5611bb647')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make || return 1
}

package() {
  depends=('curl')
  conflicts=('burp-git')

  cd $srcdir/$pkgname-$pkgver
  make PREFIX=/usr DESTDIR=${pkgdir} MANPREFIX=/usr/share/man install

}

# vim: ft=sh syn=sh
