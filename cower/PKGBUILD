# Contributor: Dave Reisner <d@falconindy.com>

pkgname=cower
pkgver=1.3
pkgrel=4
pkgdesc="A simple AUR agent with a pretentious name."
arch=('i686' 'x86_64')
url="http://github.com/falconindy/cower"
license=('GPL')
makedepends=('git')

gitroot="http://github.com/falconindy/cower.git"
gitname="cower"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ ! -d $gitname ] ; then
    git clone $gitroot $gitname
    cd $gitname
  else
    cd $gitname
    git fetch origin tag $pkgver
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  make || return 1
}

package() {
  depends=('curl' 'jansson' 'pacman')

  cd "$srcdir/$gitname"
  make DESTDIR=${pkgdir} install

}

# vim: ft=sh syn=sh
